<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.actionSets">
		<actionSet label="Code Analysis" description="Code Analysis" visible="true" id="com.bkonecsni.codeanalysis.actionSet">
			<menu label="Refactor" path="edit" id="org.eclipse.jdt.ui.refactoring.menu">
				<separator name="codeAnalysis"/>
			</menu>
			<action label="List all files" class="com.bkonecsni.codeanalysis.actions.ListAllFilesAction" menubarPath="org.eclipse.jdt.ui.refactoring.menu/codeAnalysis" id="com.bkonecsni.codeanalysis.listAllFilesAction" />
			<action label="List Java files" class="com.bkonecsni.codeanalysis.actions.ListJavaFilesAction" menubarPath="org.eclipse.jdt.ui.refactoring.menu/codeAnalysis" id="com.bkonecsni.codeanalysis.listJavaFilesAction" />
			<action label="Analyze code" class="com.bkonecsni.codeanalysis.actions.CodeAnalysisAction" menubarPath="org.eclipse.jdt.ui.refactoring.menu/codeAnalysis" id="com.bkonecsni.codeanalysis.codeAnalysis" />
		</actionSet>
	</extension>	
	<extension id="codeanalysismarker" point="org.eclipse.core.resources.markers" /> 
   	<extension id="codeanalysisproblems" point="org.eclipse.core.resources.markers">
      	<super type="org.eclipse.core.resources.problemmarker"/>
      	<super type="com.bkonecsni.codeanalysis.codeanalysismarker"/>
   	</extension>

</plugin>
